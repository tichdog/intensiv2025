<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <com.yandex.mapkit.mapview.MapView
        android:id="@+id/mapView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav" />


    <ImageView
        android:id="@+id/map_menu"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/button_marshrut"
        android:contentDescription="Map icon"
        app:layout_constraintStart_toStartOf="@id/mapView"
        app:layout_constraintBottom_toBottomOf="@id/mapView"
        android:layout_marginStart="21dp"
        android:layout_marginBottom="21dp" />

    <ImageView
        android:id="@+id/my_location_1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/button_location"
        android:contentDescription="Map icon"
        app:layout_constraintEnd_toEndOf="@id/mapView"
        app:layout_constraintBottom_toBottomOf="@id/mapView"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="21dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/bottom_nav_menu_light"
        style="@style/BottomNavigationStyle"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@drawable/bottom_nav_colors"
        app:itemTextColor="@drawable/bottom_nav_colors"
        app:itemRippleColor="?attr/menuItemColorActive"
        android:background="?attr/menuColor"/>

</androidx.constraintlayout.widget.ConstraintLayout>