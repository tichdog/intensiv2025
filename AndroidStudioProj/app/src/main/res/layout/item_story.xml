<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@drawable/back_history"
    android:padding="16dp"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kyivtypetitling1"
        android:lineHeight="28sp"
        android:text="Название"
        android:textAppearance="@style/history_nazv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/opis"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kyivtypetitling1"
        android:lineHeight="19sp"
        android:textAppearance="@style/history_opis"
        android:justificationMode="inter_word"
        android:breakStrategy="balanced"
        android:hyphenationFrequency="full"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/title_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/history_open_container"
        app:layout_constraintBottom_toBottomOf="parent" />

    <FrameLayout
        android:id="@+id/history_open_container"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/rounded_corners"
        android:clipToOutline="true"
        android:padding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_text"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/history_open"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>