<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/customBackground">

    <!-- Toolbar вверху -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/toolBarColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/kyivtypetitling1"
        app:title="Настройки темы"
        style="@style/CustomToolbarStyle"
        app:titleTextColor="?attr/textToolBarColor"/>

    <!-- Контейнер для основного содержимого -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Выбрать тему"
                android:textSize="18sp"
                android:textColor="?attr/settingtextcolor"
                android:layout_marginBottom="8dp"/>

            <RadioGroup
                android:id="@+id/themeRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <RadioButton
                    android:id="@+id/lightTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Светлая тема"
                    android:textColor="?attr/settingtextcolor"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <RadioButton
                    android:id="@+id/darkTheme"
                    android:layout_width="match_parent"
                    android:textColor="?attr/settingtextcolor"
                    android:layout_height="wrap_content"
                    android:text="Тёмная тема"
                    android:textSize="16sp"/>
            </RadioGroup>

            <!-- Новый раздел с кнопками глав -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Главы истории"
                android:textSize="18sp"
                android:textColor="?attr/settingtextcolor"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/chapter1_btn"
                    style="@style/ChapterButtonStyle"
                    android:text="1. Встреча у памятника Бобке"/>

                <Button
                    android:id="@+id/chapter2_btn"
                    style="@style/ChapterButtonStyle"
                    android:text="2. Сусанинская площадь"/>

                <Button
                    android:id="@+id/chapter3_btn"
                    style="@style/ChapterButtonStyle"
                    android:text="3. Памятник ювелиру"/>

                <Button
                    android:id="@+id/chapter4_btn"
                    style="@style/ChapterButtonStyle"
                    android:text="4. Памятник Любви"/>

                <Button
                    android:id="@+id/chapter5_btn"
                    style="@style/ChapterButtonStyle"
                    android:text="5. Дом на Дзержинского"/>

                <Button
                    android:id="@+id/chapter6_btn"
                    style="@style/ChapterButtonStyle"
                    android:text="6. Финал: Воссоединение"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- BottomNavigationView внизу экрана -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        android:background="?attr/menuColor"/>
</androidx.constraintlayout.widget.ConstraintLayout>