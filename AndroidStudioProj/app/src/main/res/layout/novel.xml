<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/customBackground">
    <!-- Контейнер для всех элементов (привязан к низу) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Персонажи (горизонтальное расположение) -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginBottom="16dp">

        <!-- Фоновое изображение -->
        <ImageView
            android:id="@+id/background_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/b2"
            android:contentDescription="@null" />

        <!-- Контейнер с персонажами -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <!-- Персонаж слева -->
            <ImageView
                android:id="@+id/character_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="false"
                android:scaleType="fitCenter" />

            <!-- Персонаж справа -->
            <ImageView
                android:id="@+id/character_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="false"
                android:scaleType="fitCenter" />
        </LinearLayout>
    </FrameLayout>

        <!-- Диалоговое окно -->
        <androidx.cardview.widget.CardView
            android:id="@+id/dialog_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="16dp"
            android:background="?attr/customBackground"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/character_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kyivtypetitling1"
                    android:gravity="center"
                    android:text="Имя персонажа"
                    android:textAppearance="@style/zast_text_upper"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/character_speech"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/kyivtypetitling1"
                    android:gravity="center_vertical"
                    android:text="Текст реплики персонажа будет здесь..."
                    android:textAppearance="@style/zast_text_upper"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Текст "Нажмите..." -->
        <TextView
            android:id="@+id/continue_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kyivtypetitling1"
            android:text="Нажмите на диалоговое окно, \n чтобы продолжить"
            android:textAppearance="@style/zast_text_bottom"
            android:gravity="center"

            android:textSize="20sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>