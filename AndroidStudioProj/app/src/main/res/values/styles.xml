<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="zast_text_upper">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="zast_text_bottom">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#535353</item>
    </style>




    <!-- Светлая тема -->
    <style name="Theme.App.Light" parent="Theme.MaterialComponents.NoActionBar">
        <item name="customBackground">#FFFFFFF2</item>
        <item name="customDialog">@drawable/dialog_light</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- Тёмная тема -->
    <style name="Theme.App.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="customBackground">#1D1B20</item>
        <item name="customDialog">@drawable/dialog</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>


</resources>