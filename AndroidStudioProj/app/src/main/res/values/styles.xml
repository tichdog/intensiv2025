<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="zast_text_upper">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="zast_text_bottom">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#535353</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="ChapterButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">?attr/settingtextcolor</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Светлая тема -->
    <style name="Theme.App.Light" parent="Theme.MaterialComponents.NoActionBar">
        <item name="customBackground">#FFFFFFFF</item>
        <item name="customDialog">@drawable/dialog_light</item>
        <item name="menuColor">#6464A9</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="settingtextcolor">#554F5F</item>
        <item name="toolBarColor">#6464A9</item>
        <item name="actionBarSize">70dp</item>
        <item name="textToolBarColor">@color/black</item>
        <item name="historyBackColor">#BFBFFF</item>
        <item name="historyNazvColor">#2E3D50</item>
        <item name="historyArr">@drawable/history_arrow_light</item>
        <item name="historyDescriptionNazvColor">#2B2338</item>
        <item name="perecentTests">#6464A9</item>
        <item name="opisTests">#FFFFFF</item>
        <item name="menuItemColor">#1A212B</item>
        <item name="menuItemColorActive">#A0F4EF</item>
    </style>

    <!-- Тёмная тема -->
    <style name="Theme.App.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="customBackground">#141118</item>
        <item name="customDialog">@drawable/dialog</item>
        <item name="menuColor">#1D1B20</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="settingtextcolor">#FFFFFF</item>
        <item name="toolBarColor">#1D1B20</item>
        <item name="actionBarSize">70dp</item>
        <item name="textToolBarColor">@color/white</item>
        <item name="historyBackColor">#1D1B20</item>
        <item name="historyNazvColor">#A8A8F5</item>
        <item name="historyArr">@drawable/history_arrow</item>
        <item name="historyDescriptionNazvColor">#A8A8F5</item>
        <item name="perecentTests">#A8A8F5</item>
        <item name="opisTests">#8181DD</item>
        <item name="menuItemColor">#FFFFFFCC</item>
        <item name="menuItemColorActive">#A8A8F5</item>
    </style>

    <style name="ToolbarTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/kyivtypetitling1</item>
        <item name="fontFamily">@font/kyivtypetitling1</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="CustomToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarTextAppearance</item>
    </style>




    <!-- styles.xml -->
    <style name="title_style">
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">#A8A8F5</item>
    </style>

    <style name="percentage_style">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#A8A8F5</item>
    </style>


    <style name="history_opis">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/settingtextcolor</item>
    </style>

    <style name="history_nazv">
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">?attr/historyNazvColor</item>
    </style>

    <style name="history_percentage">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">?attr/settingtextcolor</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">

        <item name="itemTextAppearanceActive">@style/BottomNavigationTextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationTextAppearance</item>
    </style>

    <style name="BottomNavigationTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="fontFamily">@font/kyivtypetitling1</item>
    </style>
</resources>